<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemHistory_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/app_green_light"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/itemHistory_imgIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:cropToPadding="true"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_pin_a"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/itemHistory_txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/itemHistory_imgIcon"
            android:fontFamily="@font/main_font"
            android:text="HH:MM AA" />

        <TextView
            android:id="@+id/itemHistory_txtDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemHistory_txtTime"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_toEndOf="@id/itemHistory_imgIcon"
            android:fontFamily="@font/main_font"
            android:text="Details" />

        <TextView
            android:id="@+id/itemHistory_txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/main_font"
            android:text="Php 0.00 >" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>