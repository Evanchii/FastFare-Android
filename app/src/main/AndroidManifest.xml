            android:name=".fragments.History"
            android:exported="false" />
        <activity
            android:name=".fragments.Dashboard"
            android:exported="false" />
        <activity
            android:name=".auth.Signup"
            android:exported="false" />
        <activity
            android:name=".auth.Login"
            android:exported="false" />
